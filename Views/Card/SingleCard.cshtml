@{
    Layout = "_Layout";
}

@model mtg_app.Models.Card.SingleCard


<header>
    Card Name: @Model.Name
</header>

<body>
        <style>
            .wrapper{display: flex;}
            .img, .table{display: inline-block; margin-left: 10%;}
        </style>
    <div class="wrapper">
        <div class="img"><img src="@Model.ImageUrl" class="text-left"> <!--fetch image and have it here--></div>
        <div class="table">
            <dl class="text-right">
                <dt>Type:</dt>
                <dd>@Model.Type</dd>
            </dl>
        </div>
    </div>
</body>