@{
    ViewData["Title"] = "Cards";
}

@model mtg_app.Models.Card.CardsViewModel;

<header>
    
    <div class="text-center">
        <h1 class="display-4">All Cards</h1>
    </div>
    
</header>

<body>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>@Model.ColumnCardName</th>
                    <th>@Model.ColumnCardType</th>
                </tr>
            </thead>
            <tbody>
        
        
        @foreach (var card in Model.Cards) {
                <tr>
                    <td><a asp-action="SingleCard" asp-route-categoryId="@card.CardId">@card.Name</a></td>
                    <td>@card.Type</td>
                </tr>
            }
            
            </tbody>
        </table>
    </div>
</body>