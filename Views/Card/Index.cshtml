@{
    ViewData["Title"] = "Cards";
}

@model mtg_app.Models.Card.CardsViewModel;

<header>
    
    <div class="text-center">
        <h1 class="display-4">All Cards</h1>
    </div>
    
</header>

<body>
    @using(Html.BeginForm("findCard","CardController", FormMethod.Get))
    {
        @Html.TextBox("Year", "") //have a blank search field instead of having to delete the word "cards"
        <div>
            <input type="submit" value="Search" />
        </div>
    }
    <!--add a search here to search inside the cards-->
    <div>
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Model.ColumnCardName</th>
                    <th>@Model.ColumnCardType</th>
                    <th>@Model.ColumnCardVariations</th>
                    <th>@Model.ColumnCardInCollection</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var card in Model.Cards) {
                    Html.RenderPartial("_CardsPartial", card);
                }
            </tbody>
        </table>
    </div>
</body>