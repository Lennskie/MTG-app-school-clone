@{
    ViewData["Title"] = "Collection";
}
@model mtg_app.Models.Collection.CollectionViewModel; //This model should be changed to that of the userthemselves, and not the general model
<header>
<!--autogen header here-->

<div class="text-center">
    <h1 class="display-4">Collection</h1>
    <p>Here is your collection:</p>
</div>
</header>
<body>
    <div class="container">
        <div class="c1">
            <form 
                asp-controller="SearchCard"
                asp-action="SingleCard"
                method="GET">
                <input type="text" name="Name" value=""/>
                <input type="submit">
            </form>
        </div>
        <div class="c2">
            <form 
                asp-controller="FilterCards"
                asp-action="FilterCards"
                method="GET"
                id="filter">
                <label for="rarity_code">Rarity:</label>
                <select id="rarity_code" name="rarity_code" form="filter">
                    <option value=null></option>
                    @foreach (var rarityLevels in Model.Rarity)
                    {
                        <option value=@rarityLevels>@rarityLevels</option>
                    }
                </select>
                <label for="converted_mana_cost">Mana cost:</label>
                <select id="converted_mana_cost" name="converted_mana_cost" form="filter">
                    <option value=null></option>
                    @foreach (var manaCostLevels in Model.ManaCost)
                    {
                        <option value=@manaCostLevels>@manaCostLevels</option>
                    }
                </select>
                <label for="power">Power:</label>
                <select id="power" name="power" form="filter">
                    <option value=null></option>
                    @foreach (var powerLevels in Model.Power)
                    {
                        <option value=@powerLevels>@powerLevels</option>
                    }
                </select>
                <label for="thoughness">Thoughness:</label>
                <select id="thoughness" name="thoughness" form="filter">
                    <option value=null></option>
                    @foreach (var thoughnessLevels in Model.Thoughness)
                    {
                        <option value=@thoughnessLevels>@thoughnessLevels</option>
                    }
                </select>
                <input type="submit" form="filter" value="Filter">
            </form>
        </div>
    </div>
    <div>
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Model.ColumnCardName</th>
                    <th>@Model.ColumnCardType</th>
                    <th>@Model.ColumnCardVariations</th>
                    <th>@Model.ColumnCardInCollection</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var card in Model.Cards) {
                    Html.RenderPartial("_CollectionPartial", card);
                }
            </tbody>
        </table>
    </div>
</body>